name: Build and test code

on:
  push:
    paths:
      - '*.py'
  pull_request:
    paths:
      - '*.py'

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v2
      - name: Prep Python
        uses: actions/setup-python@v1
        with:
      - name: Install Deps
        run: python -m pip install -r requirements.txt
      - name: Run
        run: python src/bot.py